{% extends "base.html.twig" %}

{% block title %}
    {{ event.title }} - Photo Walk Wednesdays
{% endblock %}

{% block open_graph %}
    <meta property="og:title" content="{{event.title}} {{event.date|date('M d')}} - Photo Walk Wednesdays" />
    <meta property="og:description" content="A free creative meetup in Boston for photographers and models" />
    <meta property="og:url" content="http://{{host}}/events/{{event.id}}" />
    <meta property="og:image" content="http://{{host}}{{event.bannerImageUrl}}" />
{% endblock %}

{% block body %}

    <div class="event-page--banner" style="background-image: url('{{event.bannerImageUrl}}')">
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="event-page--subtitle">Photo Walk Wednesdays:</h3>
                <h1 class="event-page--title">{{event.title}}</h1>
                <p class="lead" style="text-align: justify">{{event.description}}</p>
            </div>
        </div>

        {% if event.facebookLink %}
            <div class="row mb-3">
                <div class="col-md-6 offset-md-3">
                    <a class="btn btn-primary btn-lg btn-block" target="_blank" href="{{event.facebookLink}}">
                        RSVP on Facebook
                    </a>
                </div>
            </div>
        {% endif %}

        {% if event.eventbriteLink %}
            <div class="row">
                <div class="col-md-6 offset-md-3">
                    <a class="btn btn-primary btn-lg btn-block" target="_blank" href="{{event.eventbriteLink}}">
                        RSVP on EventBrite
                    </a>
                </div>
            </div>
        {% endif %}

        <hr>

        <div class="row mb-5">
            <div class="col-md-6">
                <dl>
                    <dt>Date</dt>
                    <dd>{{event.date|date('l F jS, Y')}}</dd>

                <dt>Time</dt>
                    <dd>{{event.date|date('g:i A')}}</dd>

                    {% if event.modelTheme %}
                        <dt>Optional Model Theme</dt>
                        <dd>{{event.modelTheme}}</dd>
                    {% endif %}

                    {% if event.photographerChallenge %}
                        <dt>Optional Photographer Challenge</dt>
                        <dd>{{event.photographerChallenge}}
                    {% endif %}

                    {% if event.parking %}
                        <dt>Parking Instructions</dt>
                        <dd>{{event.parking}}
                    {% endif %}

                    <dt>About</dt>
                    <dd>Photo Walk Wednesdays is a free bi-weekly meetup in Boston for photographers and models to practice their craft in a collaborative, zero-pressure environment. Photographers and models of all skill levels and experience are welcome.</dd>
                </dl>
            </div>

            <div class="col-md-6">
                {% if event.meetingLocation %}
                    <dt>Meeting Location</dt>
                    <dd>{{event.meetingLocation}}</dd>
                    <iframe
                        frameborder="0" style="border:0; width: 100%; height: 350px"
                        src="https://www.google.com/maps/embed/v1/search?key=AIzaSyDzlJVE3Ow9be-h2MTbh01Zuj7KtBfW_ss&q={{event.meetingLocation|url_encode}}"
                        allowfullscreen>
                    </iframe>
                {% endif %}
            </div>
        </div>

        <div class="row mb-5">
            <div class="col-md-12">
                Share this event
                {% include 'partials/rrssb.html.twig' %}
            </div>
        </div>

    </div>

{% endblock %}

{% block nav %}
    <a class="navbar-brand js-scroll-trigger header--title" href="/#page-top">Photo Walk Wednesdays</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/#events">Upcoming Events</a>
            </li>
            <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/#about">About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link js-scroll-trigger" href="/#featured">Photos</a>
            </li>
        </ul>
    </div>
{% endblock %}
