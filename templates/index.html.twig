{% extends "base.html.twig" %}

{% block body %}

    <header class="hero">
        <div class="hero--inner">
            <h1 class="hero--title">Photo Walk Boston</h1>
            <p class="lead">A free creative meetup in Boston for photographers and models</p>
            <p class="lead"><a href="https://www.instagram.com/explore/tags/photowalkboston/" style="color:white; text-decoration: underline;" target="_blank">#PhotoWalkBoston</a></p>
        </div>
    </header>

    {% if events is empty %}
        {% include 'partials/application-modal.html.twig' %}
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
                {% include 'partials/flash-messages.html.twig' %}
            </div>
        </div>
    </div>

    <section id="events">
        {% include 'partials/events.html.twig' %}
    </section>

    <section id="about" class="bg-light">
        {% include 'partials/about.html.twig' %}
    </section>

    <section id="featured">
        {% include 'partials/featured_photos.html.twig' %}
    </section>

    <section id="team" class="bg-light">
        {% include 'partials/team.html.twig' %}
    </section>

{% endblock %}

